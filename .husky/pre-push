echo "ðŸ” Verificando o build do Vite..." >&2

# Verificar se o build do Vite foi bem-sucedido
if ! npx vite build --mode production > /dev/null 2>&1; then
    echo "âŒ O build do Vite falhou. Corrija os erros antes de fazer o push." >&2
    exit 1
else 
    echo "âœ… O build do Vite foi realizado com sucesso." >&2
fi

echo ""

# Verificar o ambiente de produÃ§Ã£o
echo "ðŸ” Iniciando o preview do ambiente de produÃ§Ã£o..." >&2


npx vite preview --mode production &

# Salvar o PID do processo para verificar se ele estÃ¡ rodando
VITE_PID=$!
sleep 10

# Verificar se o processo ainda estÃ¡ rodando
if ! ps -p $VITE_PID > /dev/null; then
    echo "âŒ O ambiente de produÃ§Ã£o falhou. O processo do Vite nÃ£o foi iniciado corretamente." >&2
    exit 1
fi

echo ""
echo "âœ… Ambiente de produÃ§Ã£o iniciado com sucesso." >&2
clear

echo ""
echo "ðŸ” Testando o ambiente de produÃ§Ã£o..."
echo ""

# Verificar se o servidor estÃ¡ escutando na porta 4173
if ! lsof -i :4173 > /dev/null; then
    echo "âŒ O servidor nÃ£o estÃ¡ respondendo na porta 5000. Verifique os logs para mais detalhes." >&2
    kill $VITE_PID # Finaliza o processo do Vite, caso o servidor nÃ£o esteja funcionando
    exit 1
fi

# Enviar uma requisiÃ§Ã£o HTTP para garantir que o servidor estÃ¡ funcionando como esperado
if ! curl -s --head --request GET http://localhost:4173 | grep "200 OK" > /dev/null; then
    echo "âŒ O servidor estÃ¡ respondendo com erro ou nÃ£o estÃ¡ acessÃ­vel. Verifique os logs para mais detalhes." >&2
    kill $VITE_PID # Finaliza o processo do Vite em caso de falha na resposta
    exit 1
fi

echo "âœ… Ambiente de produÃ§Ã£o funcionando corretamente." >&2

kill $VITE_PID